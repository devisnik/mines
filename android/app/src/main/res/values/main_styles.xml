<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="Transparent">
		<item name="android:background">@null</item>
	</style>
	<style name="BoardView">
    <item name="android:background">@android:color/transparent</item>
    <item name="android:fadingEdge">horizontal|vertical</item>
		<item name="android:fadeScrollbars">false</item>
		<item name="android:scrollbars">horizontal|vertical</item>
		<item name="android:scrollbarStyle">outsideOverlay</item>
	</style>
	<style name="BoardPanel" parent="Transparent">
	</style>
	<style name="Counter" parent="Transparent">
		<item name="android:textSize">24dip</item>
	</style>
	<style name="GameInfo" parent="Transparent">
		<item name="android:gravity">center</item>
		<item name="android:singleLine">true</item>
  		<item name="android:ellipsize">marquee</item>
		<item name="android:marqueeRepeatLimit">-1</item>	
	</style>
</resources>
